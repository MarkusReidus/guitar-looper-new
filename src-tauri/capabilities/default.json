{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:default",
    {
      "identifier": "shell:allow-execute",
      "scope": [
        {
          "name": "ffprobe",
          "cmd": "ffprobe",
          "args": true
        }
      ]
    }
  ]
}